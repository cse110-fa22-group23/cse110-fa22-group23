{
    "scripts": {
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint --fix .",
        "lint:check": "eslint .",
        "lint:html": "htmlhint '**/*.html' --ignore='**/out/**'",
        "lint:markdown": "remark . --use remark-preset-lint-consistent --frail",
        "test": "jest --testEnvironment='jsdom'",
        "prepare": "cd .. && husky install .config/.husky",
        "docs": "jsdoc -r ./assets/js -c ../.config/jsdoc.conf.json && git add ./out"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.20.2",
        "babel-jest": "^29.3.1",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "htmlhint": "^1.1.4",
        "husky": "^8.0.2",
        "jest": "^29.2.2",
        "jest-environment-jsdom": "^29.2.2",
        "jsdoc": "^4.0.0",
        "prettier": "^2.7.1",
        "remark-cli": "^11.0.0",
        "remark-preset-lint-consistent": "^5.1.1"
    },
    "jest": {
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        }
    }
}
